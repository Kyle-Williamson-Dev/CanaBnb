<body class="signin-signup-body">

<div class="signin">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "field-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-box" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "field-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "field-box" %>
    </div>
    
    <!-- <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %> -->

    <div class="actions">
      <%= f.submit "Log in", class: "btn", id: "btn" %>
    </div>
  <% end %>

  <!-- <%= render "devise/shared/links" %> 
    This is for the "sign up" and "forgot password" links -->
</div>

</body>